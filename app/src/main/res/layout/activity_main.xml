<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="657dp"
        android:background="@drawable/bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="204dp"
        android:layout_height="65dp"
        android:background="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@+id/bg"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg" />

    <ImageView
        android:id="@+id/credit"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/credit"
        app:layout_constraintBottom_toBottomOf="@+id/bg"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/button_white"
        android:layout_width="167dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/button_black"
        android:layout_width="167dp"
        android:layout_height="52dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button_white"
        app:layout_constraintTop_toBottomOf="@+id/bg"
        android:layout_marginRight="16dp" />

    <ImageView
        android:id="@+id/txt_masuk"
        android:layout_width="48dp"
        android:layout_height="11dp"
        android:background="@drawable/txt_masuk"
        app:layout_constraintBottom_toBottomOf="@+id/button_white"
        app:layout_constraintEnd_toEndOf="@+id/button_white"
        app:layout_constraintStart_toStartOf="@+id/button_white"
        app:layout_constraintTop_toTopOf="@+id/button_white" />

    <ImageView
        android:id="@+id/txt_keluar"
        android:layout_width="48dp"
        android:layout_height="11dp"
        android:background="@drawable/txt_keluar"
        app:layout_constraintBottom_toBottomOf="@+id/button_black"
        app:layout_constraintEnd_toEndOf="@+id/button_black"
        app:layout_constraintStart_toStartOf="@+id/button_black"
        app:layout_constraintTop_toTopOf="@+id/button_black" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="135dp"
        android:layout_height="5dp"
        android:layout_marginBottom="4dp"
        tools:background="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>